        <label>annoyed</label>
	    <painOffset>-0.25</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.12</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.12</offset>
          </li>
        <!--li>
          <statOffsets>
			<MeleeDodgeChance>10</MeleeDodgeChance>
